    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        function handleImageError(img) {
            console.error('Ошибка загрузки основного изображения:', img.src);
            const $img = $(img);
            const $container = $img.closest('.main-image');
            $img.hide();
            if (!$container.find('.error-placeholder').length) {
                $container.append('<div class="error-placeholder">Обновите загрузку изображения</div>');
            }
            setTimeout(function() {
                checkImageAvailability(img.src, function(isAvailable) {
                    if (isAvailable) {
                        $container.find('.error-placeholder').remove();
                        $img.attr('src', img.src + '?retry=' + Date.now()).show();
                    }
                });
            }, 2000);
        }
        function handleThumbError(img) {
            console.error('Ошибка загрузки миниатюры:', img.src);
            const $img = $(img);
            const $container = $img.closest('.thumbnail');
            $img.hide();
            if (!$container.find('.error-placeholder').length) {
                $container.append('<div class="error-placeholder">Ошибка</div>');
            }
            $container.addClass('broken-thumb');
            setTimeout(function() {
                checkImageAvailability(img.src, function(isAvailable) {
                    if (isAvailable) {
                        $container.find('.error-placeholder').remove();
                        $container.removeClass('broken-thumb');
                        $img.attr('src', img.src + '?retry=' + Date.now()).show();
                    }
                });
            }, 1500);
        }
        function checkImageAvailability(url, callback) {
            const img = new Image();
            img.onload = function() {
                callback(true);
            };
            img.onerror = function() {
                callback(false);
            };
            img.src = url;
        }
        $(document).ready(function() {
            const totalSlides = $('.thumbnail').length;
            let currentIndex = 1;
            function updateCounter() {
                $('.image-counter').text(`${currentIndex}/${totalSlides}`);
            }
            function initSlider() {
                const $firstItem = $('.thumbnail').first();
                const firstImage = $firstItem.find('img').attr('src');
                $firstItem.addClass('active');
                $('.main-image img').attr('src', firstImage);
                updateCounter();
            }
            $('.thumbnail').on('click', function(e) {
                e.preventDefault();
                const $this = $(this);
                if ($this.hasClass('broken-thumb')) {
                    return;
                }
                const $wrap = $this.closest('.gallery-container');
                const $gap = $wrap.find('.main-image');
                const imageUrl = $this.find('img').attr('src');
                const animationDuration = 300;
                if (!$this.hasClass('active')) {
                    currentIndex = $this.index() + 1;
                    updateCounter();
                    $('.thumbnail').removeClass('active');
                    $this.addClass('active');
                    $gap.find('img').fadeOut(animationDuration, function() {
                        $(this).attr('src', imageUrl).fadeIn(animationDuration);
                    });
                    const container = $('.thumbnails');
                    const containerScroll = container.scrollLeft();
                    const thumbPos = $this.position().left;
                    const newScroll = containerScroll + thumbPos - 100;
                    container.animate({scrollLeft: newScroll}, 300);
                }
            });
            $('.nav-btn.prev').on('click', function() {
                const $active = $('.thumbnail.active');
                let $prev = $active.prev('.thumbnail');
                while ($prev.length && $prev.hasClass('broken-thumb')) {
                    $prev = $prev.prev('.thumbnail');
                }
                if ($prev.length) {
                    $prev.trigger('click');
                } else {
                    let $last = $('.thumbnail').last();
                    while ($last.length && $last.hasClass('broken-thumb')) {
                        $last = $last.prev('.thumbnail');
                    }
                    if ($last.length) {
                        $last.trigger('click');
                    }
                }
            });
            $('.nav-btn.next').on('click', function() {
                const $active = $('.thumbnail.active');
                let $next = $active.next('.thumbnail');
                while ($next.length && $next.hasClass('broken-thumb')) {
                    $next = $next.next('.thumbnail');
                }
                if ($next.length) {
                    $next.trigger('click');
                } else {
                    let $first = $('.thumbnail').first();
                    while ($first.length && $first.hasClass('broken-thumb')) {
                        $first = $first.next('.thumbnail');
                    }
                    if ($first.length) {
                        $first.trigger('click');
                    }
                }
            });
            $('.thumb-nav.prev').on('click', function() {
                const container = $('.thumbnails');
                container.animate({scrollLeft: container.scrollLeft() - 200}, 300);
            });
            $('.thumb-nav.next').on('click', function() {
                const container = $('.thumbnails');
                container.animate({scrollLeft: container.scrollLeft() + 200}, 300);
            });
            initSlider();
            // Плавное появление элементов при скролле
            $(window).on('scroll', function() {
                $('.fade-in').each(function() {
                    const elementTop = $(this).offset().top;
                    const elementBottom = elementTop + $(this).outerHeight();
                    const viewportTop = $(window).scrollTop();
                    const viewportBottom = viewportTop + $(window).height();
                    if (elementBottom > viewportTop && elementTop < viewportBottom) {
                        $(this).css('opacity', '1');
                    }
                });
            });
            // Инициализация прозрачности для анимации появления
            $('.fade-in').css('opacity', '0');
            $(window).trigger('scroll');
        });
    </script>
